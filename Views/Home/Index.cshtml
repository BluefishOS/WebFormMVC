@model WebFormMVC.Models.TestModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>INdex1</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



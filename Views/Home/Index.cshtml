                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group pl-3">
                <div class="custom-control custom-checkbox">
                    @Html.CheckBoxFor(model => model.Married, htmlAttributes: new { @class = "custom-control-input" })
                    @Html.LabelFor(model => model.Married, htmlAttributes: new { @class = "custom-control-label" })
                    @Html.ValidationMessageFor(model => model.Married, "", new { @class = "text-danger" })
